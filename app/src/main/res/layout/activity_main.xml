<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/activityContainer"
    android:background="@color/fundo"
    >

    <TextView
        android:id="@+id/currentDate"
        android:layout_width="321dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="27dp"
        android:fontFamily="@font/biryani_extralight"
        android:textAlignment="center"
        android:textColor="@color/letters"
        android:textSize="46sp"
        android:textStyle="bold"
        tools:text="Current Weather" />


    <ImageView
        android:id="@+id/weatherIcon"
        android:layout_width="201dp"
        android:layout_height="153dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="91dp"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="92dp"
        app:srcCompat="@color/fundo" />

    <TextView
        android:id="@+id/minTemp"
        android:layout_width="189dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="324dp"
        android:fontFamily="@font/biryani_extralight"
        android:text="@string/temp_minimum"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimary"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/minTempField"
        android:layout_width="192dp"
        android:layout_height="29dp"
        android:layout_below="@+id/minTemp"
        android:layout_alignEnd="@+id/minTemp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="-3dp"
        android:layout_marginBottom="98dp"
        android:fontFamily="@font/biryani_extralight"
        android:textAlignment="center"
        android:textColor="@color/letters"
        android:textSize="22sp"
        android:textStyle="bold"
        tools:text="minTemp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="189dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/minTemp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="-1dp"
        android:fontFamily="@font/biryani_extralight"
        android:text="@string/precipation"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimary"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/precField"
        android:layout_width="187dp"
        android:layout_height="24dp"
        android:layout_below="@+id/textView4"
        android:layout_alignBottom="@+id/minTempField"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="0dp"
        android:fontFamily="@font/biryani_extralight"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/letters"
        android:textSize="22sp"
        android:textStyle="bold"
        tools:text="prec" />

    <TextView
        android:id="@+id/temperatureField"
        android:layout_width="383dp"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="453dp"
        android:layout_marginEnd="0dp"
        android:fontFamily="@font/biryani_extralight"
        android:textAlignment="center"
        android:textColor="@color/letters"
        android:textSize="46sp"
        android:textStyle="bold"
        tools:text="temp" />


</RelativeLayout>